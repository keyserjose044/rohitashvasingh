---
import { isExperience } from '@/types/cv';

// Keep typing loose so we can reuse this for Experiences, Education, Awards
const { elements, colored } = Astro.props as {
  elements: any[];
  colored: boolean;
};

// Main heading line (bold)
const getHeading = (el: any) => {
  if (isExperience(el)) return el.title;          // experience: job title
  if ('degree' in el && el.degree) return el.degree; // education: degree
  if ('title' in el && el.title) return el.title;    // awards: award title
  return '';
};

// Organization / institution / issuer line
const getOrg = (el: any) => {
  if (isExperience(el)) return el.company;
  if ('school' in el && el.school) return el.school;
  if ('issuer' in el && el.issuer) return el.issuer; // awards: issuer
  return '';
};
---

<ul class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical">
  {
    elements.map((element, index) => (
      <li>
        <div class="timeline-middle">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class:list={[{ 'text-accent': colored }, 'h-5 w-5']}
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
              clip-rule="evenodd"
            />
          </svg>
        </div>

        <div
          class={`${index % 2 === 0 ? 'timeline-start' : 'timeline-end'} mb-10 md:text-end`}
        >
          {/* time */}
          {element.time && (
            <time class="font-mono italic">
              {element.time}
            </time>
          )}

          {/* bold heading (job title / degree / award title) */}
          {getHeading(element) && (
            <div class="text-lg font-black">
              {getHeading(element)}
            </div>
          )}

          {/* org / school / issuer */}
          {getOrg(element) && <div>{getOrg(element)}</div>}

          {/* description */}
          {element.description && <div>{element.description}</div>}

          {/* location */}
          {element.location && <div>{element.location}</div>}
        </div>

        <hr class:list={[{ 'bg-accent': colored }]} />
      </li>
    ))
  }
</ul>
